<!DOCTYPE html>
<html lang="en">

<head>
  @await Html.PartialAsync("MetatagsPartial")
  @await Html.PartialAsync("CssPartial")
</head>

<body>
<div class="container shadow-sm bg-white">
  @await Html.PartialAsync("NavigationPartial")
  
  <div class="row mb-4">
    <div class="col-2 shadow-sm bg-white">
      @await Html.PartialAsync("NavigationSidebarPartial")
    </div>
    <div class="col-10 shadow-sm p-4 bg-white">
      @RenderBody()
    </div>
  </div>
</div>

@await Html.PartialAsync("FooterPartial")
@await Html.PartialAsync("ScriptsPartial")
</body>

</html>
